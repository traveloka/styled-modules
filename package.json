{
  "name": "styled-modules",
  "version": "0.2.4",
  "description": "CSS Modules support in Next.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/traveloka/styled-modules.git"
  },
  "keywords": [
    "css",
    "css-modules",
    "jsx",
    "next.js",
    "react",
    "soya",
    "soya-next"
  ],
  "files": [
    "lib",
    "babel.js",
    "loader.js",
    "server.js",
    "style.js"
  ],
  "scripts": {
    "build": "babel src -d lib",
    "clean": "rimraf lib",
    "coverage": "jest --coverage",
    "coveralls": "yarn run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "marlint",
    "lint:fix": "yarn run lint -- --fix",
    "precommit": "lint-staged",
    "prepublish": "yarn run clean && yarn run build",
    "test": "jest",
    "watch": "yarn build -- -w"
  },
  "dependencies": {
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-types": "^6.24.1",
    "loader-utils": "^1.1.0",
    "prop-types": "^15.5.10",
    "string-hash": "^1.1.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.0",
    "husky": "^0.14.0",
    "jest": "^22.1.1",
    "lint-staged": "^6.0.0",
    "marlint": "^6.2.1",
    "rimraf": "^2.6.1"
  },
  "peerDependencies": {
    "css-loader": "^0.28.0",
    "react": "^15.0.0 || ^16.0.0",
    "webpack": "^3.0.0"
  },
  "lint-staged": {
    "*.js": [
      "lint:fix",
      "git add"
    ]
  },
  "marlint": {
    "envs": [
      "browser",
      "es6",
      "node",
      "jest"
    ],
    "ignores": [
      "**/coverage/**",
      "**/lib/**",
      "**/node_modules/**"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/test/"
    ]
  }
}
